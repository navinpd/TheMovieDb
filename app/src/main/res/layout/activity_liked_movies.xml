<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/d1">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_tv"
        style="@style/TitleLg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/favourite_movies" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/no_search_result"
        style="@style/TitleMd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:gravity="center"
        android:text="@string/no_movie_liked"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liked_movies_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_marginTop="@dimen/d1"
        android:paddingTop="@dimen/d1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>