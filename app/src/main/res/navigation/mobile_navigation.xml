<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_now_playing">

    <fragment
        android:id="@+id/navigation_now_playing"
        android:name="com.api.moviedb.presentation.ui.nowplaying.NowPlayingFragment"
        android:label="@string/now_playing"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_popular"
        android:name="com.api.moviedb.presentation.ui.popular.PopularMovieFragment"
        android:label="@string/popular"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_top_rated"
        android:name="com.api.moviedb.presentation.ui.toprated.TopRatedMovieFragment"
        android:label="@string/top_rated"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="com.api.moviedb.presentation.ui.upcoming.UpcomingMovieFragment"
        android:label="@string/upcoming"
        tools:layout="@layout/fragment_notifications" />
</navigation>