<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.api.moviedb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".presentation.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieDb">
        <activity
            android:name=".presentation.ui.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.moviedetail.MovieDetailActivity"
            android:theme="@style/AppTheme.NoTitle"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.favmovie.FavMovieListActivity"
            android:theme="@style/AppTheme.NoTitle"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.search.SearchMovieListActivity"
            android:theme="@style/AppTheme.NoTitle"
            android:screenOrientation="portrait" />
    </application>

</manifest>